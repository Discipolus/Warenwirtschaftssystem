<UserControl x:Class="GUI_WPF.UserControls.Uebersicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:usercontrols="clr-namespace:GUI_WPF.UserControls"
             xmlns:viewmodels="clr-namespace:GUI_WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:UCUebersichtViewModel/>
    </UserControl.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding testliste}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Margin="3,0"/>
                        <TextBlock Text="{Binding Maße}"/>
                        <TextBlock Text="{Binding Größenklasse}" />
                        <TextBlock Text="{Binding Größenklasse}" />
                        <TextBlock Text="{Binding Größenklasse}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
